name: Demo
on: push
  
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - name: checkout
      uses: actions/checkout@v4.1.0
    - name: echo message
      run: echo build done
  deploy_to_stg:
    name: deploy to stg
    runs-on: ubuntu-latest
    needs: build
    steps:
    - name: checkout
      uses: actions/checkout@v4.1.0
    - name: echo message
      run: echo stg deployment done
  deploy_to_prod:
    name: deploy to prod
    runs-on: ubuntu-latest
    needs: deploy_to_stg
    steps:
    - name: checkout
      uses: actions/checkout@v4.1.0
    - name: echo message
      run: echo prod deployment done
